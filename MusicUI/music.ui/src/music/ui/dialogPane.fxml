<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<DialogPane fx:controller="music.ui.DialogController"
            xmlns:fx="http://javafx.com/fxml">
    <headerText>
    </headerText>

    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Artist Id" GridPane.rowIndex="0" GridPane.columnIndex="0">
                <font>
                    <Font name="Sans-Serif" size="12"/>
                </font>
            </Label>
            <Label fx:id="ID" GridPane.rowIndex="0" GridPane.columnIndex="1">
                <font>
                    <Font name="Sans-Serif bold" size="12"/>
                </font>
            </Label>

            <Label text="Artist Name" GridPane.rowIndex="1" GridPane.columnIndex="0">
                <font>
                    <Font name="Sans-Serif bold" size="12"/>
                </font>
            </Label>

            <TextField fx:id="name" GridPane.rowIndex="1" GridPane.columnIndex="1">
                <font>
                    <Font name="Sans-Serif bold" size="12"/>
                </font>
            </TextField>

        </GridPane>
    </content>
</DialogPane>